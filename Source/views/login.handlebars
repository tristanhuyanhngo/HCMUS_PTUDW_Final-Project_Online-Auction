{{#section 'js'}}
    <script>
        $('#formLogin').on('submit', function (event) {
            event.preventDefault();

            const email = document.getElementById('txtEmail').value;

            if (!/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.test(email)) {
                //alert("Invalid email !");
                $("#alert-fail").removeClass('hidden');
                return;
            }

            // Ajax
            $('#formLogin').off('submit').submit();
        });
        $('#txtFullName').select();

        const alert_del = document.querySelectorAll('.alert-del');

        $("#close-alert").click(() => {
            $("#alert-fail").addClass('hidden');
        })
    </script>
{{/section}}
<div class="relative py-3 pl-4 pr-10 leading-normal text-red-700 bg-red-100 rounded-lg hidden duration-100" role="alert" id="alert-fail">
    <p>A simple alert with text and a right icon</p>
    <span class="absolute inset-y-0 right-0 flex items-center mr-4">
    <svg id="close-alert" class="w-4 h-4 fill-current" role="button" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path></svg>
  </span>
</div>

<form id="formLogin" method="post">
    <div class="container mx-auto flex justify-center pt-16">
    <div class="w-96  p-8 border border-cyan-700 shadow-2xl ">
        {{#if error}}
            <p class="text-red-600 text-center mb-4 "><strong>{{error}}</strong></p>
        {{/if}}
        <input
            class="flex-1 appearance-none border border-cyan-700 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none"
            id="txtEmail"
            placeholder="Email"
            name="email"/>
        <input
            class="flex-1 appearance-none border border-cyan-700 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none mt-4"
            type="password" id="txtPassword" placeholder="Password" name="password">

        <a class="inline-flex text-xs text-gray-500 sm:text-sm dark:text-gray-100 hover:text-gray-700 dark:hover:text-white mt-2"
            href="/register">Haven't got an account yet?</a>
        <button
            class="bg-cyan-700 w-full mt-2 shadow-md py-2 px-4 hover:bg-cyan-800 font-medium transition duration-500 text-white" type="submit">LOGIN</button>

        <div class="flex flex-row my-2">
            <div class="h-3 w-full border-b border-black">

            </div>
            <div class="mx-2">  OR  </div>
            <div class="h-3 w-full border-b border-black"></div>
        </div>


        <div class="grid gap-4 grid-cols-2">
            <button type="button"
                class="py-2 px-4 flex justify-center items-center  bg-blue-600 hover:bg-blue-700 focus:ring-blue-500 focus:ring-offset-blue-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  ">

                <i class="fa fa-facebook mr-2" aria-hidden="true"></i>
                Facebook
            </button>
            <button type="button"
                class="py-2 px-4 flex justify-center items-center  bg-red-600 hover:bg-red-700 focus:ring-red-500 focus:ring-offset-red-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  ">

                <i class="fa fa-google mr-2" aria-hidden="true"></i>
                </svg>
                Google
            </button>
        </div>

    </div>
</div>
</form>