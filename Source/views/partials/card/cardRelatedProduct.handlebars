<a href="/product/detail/{{ProID}}">
    <div class="border border-gray-300 w-full overflow-hidden">
        <img src="/public/images/Product/{{BigCatName}}/{{CatName}}/{{ProID}}/1.jpg?auto=compress&w=480&q=90&dpr=2&updated_at=1635280285&h=320&fm=webp"
             alt="" class=" object-cover object-center shadow h-32 w-full">
        <div class="p-2 ">
            <div class="font-semibold truncate text-cyan-700">{{ProName}}</div>
            <div class="flex justify-between mt-2 text-sm font-base">
                <div class="">Buy now</div>
                <div class="">{{format_number SellPrice}}</div>
            </div>
            <div class="flex justify-between text-sm font-base">
                <div class="">End in</div>
                <div class="">{{format_relative EndDate}}</div>
            </div>
        </div>
    </div>
</a>