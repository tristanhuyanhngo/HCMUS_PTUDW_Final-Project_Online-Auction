{{#section 'js'}}
    <script>
        document.body.appendChild(document.createElement('script')).src='https://unpkg.com/sweetalert/dist/sweetalert.min.js';
        $('#formConfirmOTP').on('submit', function (event) {
            event.preventDefault();
            const otp = document.getElementById('txtOTP').value;
            if(otp.length<1){
                swal("Please enter OTP!");
                return;
            }
            $('#formConfirmOTP').off('submit').submit();
        });
        $('#txtOTP').select();
    </script>
{{/section}}
<div class="min-h-screen h-100">

    <form id="formConfirmOTP" method="post" action="/confirm-otp">
        <div class="container mx-auto flex justify-center pt-16">
            <div class="w-96  p-8 border border-cyan-700 shadow-2xl ">
                {{#if error}}
                    <p class="text-red-600 text-left mb-4 "><strong>{{error}}</strong></p>
                {{/if}}
                <label class="text-key text-light">
                    Enter the OTP we sent you via email.
                </label>
                <input hidden name = "Email" value = {{forgetUser}}>
                <input
                        class="flex-1 mt-2 appearance-none
                    form-control
                    border border-cyan-700 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none"
                        id="txtOTP"
                        type="number"
                        maxlength="6"
                        placeholder="6-digit-number OTP"
                        name="OTP"/>
                <button
                        class="bg-cyan-700 w-full mt-2 shadow-md py-2 px-4 hover:bg-cyan-800 font-medium transition duration-500 text-white"
                        type="submit">CONFIRM
                </button>
            </div>
        </div>
    </form>
</div>

